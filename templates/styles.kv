    use_pagination: True
    elevation: 1
    rows_num: 10
    background_color: (255, 255, 255, 1)
    background_color_header: (0, 128, 128, 0.3)
    background_color_selected_cell: (255, 165, 0, 0.2)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
 

# ----- PAIR BUTTON -----

<PairButtonsContainer@MDBoxLayout>
    size_hint: .50, None
    height: '40dp'
    pos_hint: {'right': .98, 'y': .01}
    spacing: 10
    
 
<PairButton@MDRectangleFlatIconButton>:
    style: "elevated"
    halign: "center" 
    icon_color: "#FFA500"
    md_bg_color: (255, 255, 255, 1)
    size_hint: .25, None
    height: '40dp'
    bold: True
    
<NormalButton@MDRectangleFlatIconButton>:
    padding: "10dp"
    style: "elevated"
    halign: "center" 
    icon_color: "#FFA500"
    color: "#000000"
    md_bg_color: (255, 255, 255, 1)
    size_hint: .50, None
    height: '40dp'
    bold: True
    radius: [0]
    line_width: 1

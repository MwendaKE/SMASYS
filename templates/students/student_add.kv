<AddStudentScreen>:
    adm_no: adm_no
    full_name: fname
    gender: gender
    date_of_birth: dob
    date_of_admission: doa
    kcpe: kcpe
    hostel: hostel
    form: form
    performance: performance
    discipline: discipline
    subjects: subjects
    guardian: guardian
    kcse: kcse
    role: role
    
    MDScrollView:
        effect_cls: ScrollEffect
        
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            padding: "20dp"
            spacing: "20dp"
	            
            SectionTitle:
                text: "Add Student"
                
	        MDGridLayout:
	            cols: 1
	            spacing: "10dp"
	            padding: 0,0,0, "50dp"
	            adaptive_height: True
      
	            LineEdit:
	                id: adm_no
	                hint_text: "Adm Number *"
	                input_type: "number"
	                required: True
	                
	            LineEdit:
	                id: fname
	                hint_text: "Full Name *"
	                required: True
	                
	            ###########
	            
	            MDGridLayout:
	                cols: 1
	                adaptive_height: True
	                spacing: 5
	                
	                BuddyLabel2:
	                    text: "Class / Form:"
	                    
	                TextDropdownButton:
	                    id: form
	                    text: "Select Class"
	                    on_release: root.open_class_menu()
	                    
	            MDGridLayout:
	                cols: 1
	                adaptive_height: True
	                spacing: 5
	                
	                BuddyLabel2:
	                    text: "Gender:"
	                    
	                TextDropdownButton:
	                    id: gender
	                    text: "Select Gender"
	                    on_release: root.open_gender_menu()
	            
	            ############
	            
	            LineEdit:
	                id: dob
	                hint_text: "Date Of Birth"
	                on_focus: if self.focus: root.open_dob_date_picker()
	            
	            LineEdit:
	                id: doa
	                hint_text: "Date Of Admission"
	                on_focus: if self.focus: root.open_doa_date_picker()
	            
	            LineEdit:
	                id: kcpe
	                hint_text: "KCPE Marks"
	                input_type: "number"
	            
	            ########
	            
	            MDGridLayout:
	                cols: 1
	                adaptive_height: True
	                spacing: 5
	                
	                BuddyLabel2:
	                    text: "Student Role:"
	                
	                TextDropdownButton:
	                    id: role
	                    text: "STUDENT (NO ROLE)"
	                    on_release: root.open_student_role_menu()
	               
	            MDGridLayout:
	                cols: 1
	                adaptive_height: True
	                spacing: 5
	                
	                BuddyLabel2:
	                    text: "HOSTEL / DORMITORY:"
	                 
	                MDGridLayout:
	                    cols: 2
	                    adaptive_height: True
	                    spacing: 10  
	                 
	                    TextDropdownButton:
	                        id: hostel
	                        text:  "Select Hostel"
	                        size_hint_x: 0.85
	                        on_release: root.open_hostel_menu()
	                    
	                    BuddyButton2:
	                        id: add_hostel_btn
	                        icon: "plus"
	                        size_hint_x: 0.15
	                        on_release: root.add_hostels()
	                    
	            ########
	       
	            LineEdit:
	                id: performance
	                hint_text: "Performance"
	                disabled: True
	            
	            LineEdit:
	                id: discipline
	                hint_text: "Discipline"
	                disabled: True
	            
	            LineEdit:
	                id: subjects
	                hint_text: "Subjects"
	                multiline: True
	                on_focus: if self.focus: root.open_subjects_picker()
	                
	            LineEdit:
	                id: guardian
	                hint_text: "Parent's Phone Number"
	                
	            LineEdit:
	                id: kcse
	                hint_text: "KCSE Grade"
	                
	          
                MDGridLayout:
                    cols: 3
                    spacing: 5
                    height: "50dp"
                    
                    MDLabel:
                        size_hint_x: 0.50
                         
                    NormalButton:
                        icon: "cancel"
                        text: "CANCEL"
                        size_hint_x: 0.25
                        on_release: root.manager.current = "students"
                        
                    NormalButton:
                        icon: "plus"
                        text: "ADD"
                        size_hint_x: 0.25
                        on_release: root.add_student()

	            
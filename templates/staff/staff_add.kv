<AddStaffScreen>:
    id_no: id_no # National ID number
    full_name: fname
    gender: gender
    ethnicity: ethnicity
    loe: loe # Level of education
    role: role # Staff role, teacher, other worker, etc
    class_: class_
    phone: phone 
    combination: combination # Subject combination
    doe: doe # Date of employment
    
    MDScrollView:
        effect_cls: ScrollEffect
        
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            padding: "20dp"
            spacing: "20dp"
            
            SectionTitle:
                text: "Add Staff"
                
	        MDGridLayout:
	            cols: 1
	            spacing: "10dp"
	            padding: 0,0,0, "50dp"
	            adaptive_height: True
      
	            LineEdit:
	                id: id_no
	                hint_text: "ID Number *"
	                input_type: "number"
	                required: True
	            
	            LineEdit:
	                id: fname
	                hint_text: "Full Name *"
	                required: True
	            
	            LineEdit:
	                id: gender
	                hint_text: "Gender *"
	                on_focus: if self.focus: root.open_gender_menu()
	                required: True
	            
	            LineEdit:
	                id: ethnicity
	                hint_text: "Ethnicity"
	                on_focus: if self.focus: root.open_ethnicity_menu()
	            
	            LineEdit:
	                id: loe
	                hint_text: "Level of Education"
	                on_focus: if self.focus: root.open_loe_menu()
	             
	            LineEdit:
	                id: class_
	                hint_text: "Staff Class *"
	                on_focus: if self.focus: root.open_class_menu()
	                required: True
	                
	            LineEdit:
	                id: role
	                hint_text: "Staff Role"
	                on_focus: if self.focus: root.open_role_menu()
	            
	            LineEdit:
	                id: phone
	                hint_text: "Phone Number *"
	                input_type: "number"
	                
	            LineEdit:
	                id: combination
	                hint_text: "Subject Combination"
	                on_focus: if self.focus: root.open_subject_dialog()
	                multiline: True
	                
	            LineEdit:
	                id: doe
	                hint_text: "Date of Employment"
	                on_focus: if self.focus: root.open_doe_date_picker()
	            
	            
	            MDGridLayout:
                    cols: 3
                    spacing: 5
                    height: "50dp"
                    
                    MDLabel:
                        size_hint_x: 0.50
                         
                    NormalButton:
                        icon: "cancel"
                        text: "CANCEL"
                        size_hint_x: 0.25
                        on_release: root.manager.current = "staff"
                        
                    NormalButton:
                        icon: "plus"
                        text: "ADD"
                        size_hint_x: 0.25
                        on_release: root.add_staff()

	            
<ViewStudentQueryNameDialogContent>:
    orientation: "vertical"
    size_hint: 0.9, None
    height: "300dp"
    padding: "2dp"
	        
    MDScrollView:
        MDList:
            padding: "2dp"
            id: stds_container
             
	            
<SearchQueryDialogContent>:
    orientation: "vertical"
    size_hint: 0.9, None
    height: "200dp"
    spacing: "15dp"
	padding: "5dp"
	
	MDBoxLayout:
	    orientation: "vertical"
	    spacing: "10dp"
	    
	    TextLabel:
	        text: "SEARCH FROM:"
	        font_size: "10sp"
	        
	    Spinner:
            id: query_type_spinner
            text: "STUDENTS"
            color: "#008080"
            values: ["STUDENTS","STAFF"]
            background_color: (255, 255, 255, 1)
            
        TextLabel:
            text: "SEARCH BY:"
            font_size: "10sp"
            
        Spinner:
            id: query_by_spinner
            text: "ID"
            color: "#008080"
            values: ["ID", "NAME"]
            background_color: (255, 255, 255, 1)
             
	LineEdit:
	    id: search_query
	    hint_text: "SEARCH"
	    required: True
	   
	   

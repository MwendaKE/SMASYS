<HomeScreen>:
    MDScrollView:
        effect_cls: ScrollEffect
            
        MDBoxLayout:
            orientation: "vertical"
            padding: "20dp", "20dp", "20dp", "10dp"
            spacing: "30dp"
            adaptive_height: True
                
            SectionTitle:
                text: "General"
                    
            MDGridLayout:
                cols: 2
                spacing: "10dp"
                adaptive_height: True
                
                ##COUNTER##
                
                # CLASSES COUNT 
                    
                MDCard:
                    padding: 4
                    size_hint: .5, None
                    height: "80dp"
                    style: "outlined"
                    line_color: '#008080'
                    radius: 0,10,0,10
                        
                    MDBoxLayout:
                        padding: "10dp"
                        spacing: 20
                            
                        MDIconButton:
                            icon: "view-compact"
                            icon_size: "32sp"
                            size_hint_x: .35
                                
                                    
                        MDBoxLayout:
                            orientation: "vertical"
                            size_hint_x: .65
                                
                            MDLabel:
                                id: student_count
                                text: "4"
                                color: "#008080"
                                font_size: "36sp"
                                padding: 0, "10dp", 0, "20dp"
                                bold: True
                                
                            MDLabel:
                                text: "Classes"
                                font_style: "Button" 
                                font_size: "14sp"
                                    
                        
                # STUDENT COUNT 
                    
                MDCard:
                    padding: 4
                    size_hint: .5, None
                    height: "80dp"
                    style: "outlined"
                    line_color: '#008080'
                    radius: 0,10,0,10
                        
                    MDBoxLayout:
                        padding: "10dp"
                        spacing: 20
                            
                        MDIconButton:
                            icon: "school"
                            icon_size: "32sp"
                            size_hint_x: .35
                                
                                    
                        MDBoxLayout:
                            orientation: "vertical"
                            size_hint_x: .65
                                
                            MDLabel:
                                id: student_count
                                text: "4"
                                color: "#008080"
                                font_size: "36sp"
                                padding: 0, "10dp", 0, "20dp"
                                bold: True
                                
                            MDLabel:
                                text: "Students"
                                font_style: "Button" 
                                font_size: "14sp" 
                                    
                        
                # TEACHER COUNT 
                    
                MDCard:
                    padding: 4
                    size_hint: .5, None
                    height: "80dp"
                    style: "outlined"
                    line_color: '#008080'
                    radius: 0,10,0,10
                        
                    MDBoxLayout:
                        padding: "10dp"
                        spacing: 20
                            
                        MDIconButton:
                            icon: "human-male-female"
                            icon_size: "32sp"
                            size_hint_x: .35
                                
                                    
                        MDBoxLayout:
                            orientation: "vertical"
                            size_hint_x: .65
                                
                            MDLabel:
                                id: teacher_count
                                text: "4"
                                color: "#008080"
                                font_size: "36sp"
                                padding: 0, "10dp", 0, "20dp"
                                bold: True
                                
                            MDLabel:
                                text: "Teachers"
                                font_style: "Button" 
                                font_size: "14sp"
                                
                                
                # ADMINS COUNT 
                    
                MDCard:
                    padding: 4
                    size_hint: .5, None
                    height: "80dp"
                    style: "outlined"
                    line_color: '#008080'
                    radius: 0,10,0,10
                        
                    MDBoxLayout:
                        padding: "10dp"
                        spacing: 20
                            
                        MDIconButton:
                            icon: "account-tie"
                            icon_size: "32sp"
                            size_hint_x: .35
                                
                                    
                        MDBoxLayout:
                            orientation: "vertical"
                            size_hint_x: .65
                                
                            MDLabel:
                                id: admin_count
                                text: "4"
                                color: "#008080"
                                font_size: "36sp"
                                padding: 0, "10dp", 0, "20dp"
                                bold: True
                                
                            MDLabel:
                                text: "Admins"
                                font_style: "Button" 
                                font_size: "14sp"
                                 
                        
                  
            ##STATISTICS GRAPH##
            
            SectionTitle:
                text: "Statistics"
            
            MDBoxLayout:
                orientation: "vertical"
                size_hint: 1, None
                height: "300dp"
            
                Image:
                    id: home_graph
                    size_hint: self.parent.size_hint
                    height: self.parent.height
                    source: ""
                    allow_stretch: True
                    keep_ratio: True
                
                
            ##MAIN MENU##
                
            SectionTitle:
                text: "Menu"
            
            MDGridLayout:
                cols: 3
                spacing: "10dp"
                adaptive_height: True
            
                MDFlatButton:
                    size_hint: self.parent.size_hint
                    height: "110dp"
                    on_release: root.open_routine_screen()
                
                    MDBoxLayout:
                        orientation: "vertical"
                    
                        MDIconButton:
                            icon: "clipboard-list-outline"
                            md_bg_color: "#008080"
                            pos_hint: {"center_x": 0.5}
                        
                        MDLabel:
                            text: "Routine"
                            halign: 'center'
                            valign: 'bottom'
            
                MDFlatButton:
                    size_hint: self.parent.size_hint
                    height: "110dp"
                    on_release: root.open_calendar_screen()
                
                    MDBoxLayout:
                        orientation: "vertical"
                    
                        MDIconButton:
                            icon: "calendar-clock-outline"
                            md_bg_color: "#008080"
                            pos_hint: {"center_x": 0.5}
                        
                        MDLabel:
                            text: "School Calendar"
                            halign: 'center'
                            valign: 'bottom'
                 
                MDFlatButton:
                    size_hint: self.parent.size_hint
                    height: "110dp"
                    on_release: root.open_library_screen()
                    
                    MDBoxLayout:
                        orientation: "vertical"
                    
                        MDIconButton:
                            icon: "bookshelf"
                            md_bg_color: "#008080"
                            pos_hint: {"center_x": 0.5}
                         
                        MDLabel:
                            text: "Library"
                            halign: 'center'
                            valign: 'bottom'
                            text_color: "#FF0000"
            
                MDFlatButton:
                    size_hint: self.parent.size_hint
                    height: "110dp"
                    on_release: root.open_duties_screen()
                
                    MDBoxLayout:
                        orientation: "vertical"
                    
                        MDIconButton:
                            icon: "list-box-outline"
                            md_bg_color: "#008080"
                            pos_hint: {"center_x": 0.5}
                        
                        MDLabel:
                            text: "Duty Rota"
                            halign: 'center'
                            valign: 'bottom'
            
                MDFlatButton:
                    size_hint: self.parent.size_hint
                    height: "110dp"
                    on_release: root.open_subjects_screen()
                
                    MDBoxLayout:
                        orientation: "vertical"
                    
                        MDIconButton:
                            icon: "book-open-page-variant-outline"
                            md_bg_color: "#008080"
                            pos_hint: {"center_x": 0.5}
                        
                        MDLabel:
                            text: "Subject Allocation"
                            halign: 'center'
                            valign: 'bottom'
                   
                MDFlatButton:
                    size_hint: self.parent.size_hint
                    height: "110dp"
                    on_release: root.open_grading_screen()
                  
                    MDBoxLayout:
                        orientation: "vertical"
                    
                        MDIconButton:
                            icon: "check-decagram-outline"
                            md_bg_color: "#008080"
                            pos_hint: {"center_x": 0.5}
                        
                        MDLabel:
                            text: "Grading"
                            halign: 'center'
                            valign: 'bottom'
                        
        
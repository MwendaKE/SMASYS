                cols: 1
                spacing: 5
                adaptive_height: True
               
                SectionTitle:
                    text: "Grading System"
                    padding: 0, 0, 0, "20dp" 
                    
                TextDropDown:
                    id: grading_spinner
                    text: "GENERAL"
                    values: ["GENERAL", "MATH & SCIENCE", "LANGUAGES", "HUMANITIES", "COMMENTS"] 
                    on_text: root.update_grading_screen()
                    height: "40dp"
                    
              
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                
                MDBoxLayout:
                    id: all_grading_container
                    orientation: "vertical"
                    adaptive_height: True
                    spacing: 10
                
                
                MDGridLayout:
                    cols: 3
                    spacing: 5
        
                    MDLabel:
                        size_hint_x: 0.50
            
                    NormalButton:
                        icon: "arrow-left"
                        text: "BACK"
                        size_hint_x: 0.25
                        on_release: root.manager.current = "home"
            
                    NormalButton:
                        icon: "content-save-outline"
                        text: "UPDATE"
                        size_hint_x: 0.25
                        on_release: root.update_grading()
                        disabled: True if grading_spinner.text == "GENERAL" else False

    
                
                
                                                          
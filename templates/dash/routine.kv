<RoutineScreen>:
    term: term
    year: year
    
    MDScrollView:
        effect_cls: ScrollEffect
            
        MDBoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "20dp"
            adaptive_height: True
                
            SectionTitle:
                text: "Routine / Activities"
                
            MDGridLayout:
                cols: 2
                size_hint: 1, None
                height: "40dp"
                
                Spinner:
                    id: term
                    text: "TERM 1"
                    color: "#FFA500"
                    values: ["TERM 1", "TERM 2", "TERM 3"]
                    background_color: (255, 255, 255, 1)
                    size_hint: 0.5, None
                    height: self.parent.height
                    on_text: root.on_pre_enter()
             
                Spinner:
                    id: year
                    text: "2024"
                    color: "#FFA500"
                    values: ["2024"]
                    background_color: (255, 255, 255, 1)
                    size_hint: 0.5, None
                    height: self.parent.height
                    
            # ACTIVITIES
                
            SectionHeader:
                text: "TERM ACTIVITIES"
                #padding: 0, "50dp", 0, "50dp"
                bold: True
                    
            MDList:
                id: acts_container
                    
            MDGridLayout:
                cols: 3
                spacing: "10dp"
                size_hint: 1, None
                height: "40dp"
                
                NormalButton:
                    text: "Add Activity"
                    icon: "plus"
                    on_release: root.add_term_activity()
                
                NormalButton:
                    text: "Print Activities"
                    icon: "printer-outline"
                    on_release: root.print_term_activities()
                
                MDLabel:
                    
                
            # SCHOOL ROUTINE
                
            SectionHeader:
                text: "SCHOOL ROUTINE"
                #padding: 0, "50dp", 0, "50dp"
                bold: True
                
            SectionSubHeader:
                text: "WEEK DAYS"
                #padding: 0, "50dp", 0, "50dp"
                bold: True
               
            MDList:
                id: weekday_container      
            
            
            SectionSubHeader:
                text: "WEEKENDS"
                #padding: 0, "50dp", 0, "50dp"
                bold: True
               
            SectionSubHeader:
                text: "Saturday"
                #padding: 0, "50dp", 0, "50dp"
                bold: True
                  
            MDList:
                id: sat_container
                
               
            SectionSubHeader:
                text: "Sunday"
                #padding: 0, "50dp", 0, "50dp"
                bold: True
                  
            MDList:
                id: sun_container
                
                
            MDGridLayout: 
                cols: 3
                spacing: "10dp"
                size_hint: 1, None
                height: "40dp"
                
                NormalButton:
                    text: "Add Routine"
                    icon: "plus"
                    on_release: root.add_school_routine()
                
                NormalButton:
                    text: "Print Routines"
                    icon: "printer-outline"
                    on_release: root.print_school_routines()
                
                MDLabel:
                
                
                
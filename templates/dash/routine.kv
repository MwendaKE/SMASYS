#:import RoutineScreen screens.dash.routine
#:import ScrollEffect  kivy.effects.scroll.ScrollEffect


<SchoolActivityListItem>:
    divider_color: "#008080"
    
    IconLeftWidget:
        icon: "timer-cog-outline"
        
        
<SchoolRoutineListItem>:
    divider_color: "#008080"
    
    IconLeftWidget:
        icon: "timer-outline"  
        
        
<SchoolRoutineAddDialogContent>:
    orientation: "vertical"
    size_hint: 0.9, None
    height: "350dp"
    padding: "5dp"
	
	MDScrollView:
	    MDBoxLayout:
	        orientation: "vertical"
	        spacing: "10dp"
	        adaptive_height: True
	        
	        Spinner:
                id: term_spinner
                text: app.root.ids.routine.ids.term.text
                color: "#008080"
                values: ["TERM 1","TERM 2", "TERM 3"]
                background_color: (255, 255, 255, 1)
                
            Spinner:
                id: year_spinner
                text: app.root.ids.routine.ids.year.text
                color: "#008080"
                values: ["2024"]
                background_color: (255, 255, 255, 1)
            
            LineEdit:
	            id: routine
	            hint_text: "Routine *"
	            required: True
	            multiline: True
	        
	        LineEdit:
	            id: stime
	            hint_text: "Start Time *"
	            required: True
	            on_focus: if self.focus: root.open_route_stime_picker()
                      
            LineEdit:
	            id: etime
	            hint_text: "End Time *"
	            required: True
	            on_focus: if self.focus: root.open_route_etime_picker()
                      
            Spinner:
                id: type_spinner
                text: "Select Week"
                color: "#008080"
                values: ["Week Day", "Saturday", "Sunday"]
                background_color: (255, 255, 255, 1)
                
         

#:import CalendarScreen screens.dash.schcalendar
#:import ScrollEffect  kivy.effects.scroll.ScrollEffect

<CalendarScreen>:
    year: year
    
    MDScrollView:
        effect_cls: ScrollEffect
            
        MDBoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "20dp"
            adaptive_height: True
                
            SectionTitle:
                text: "School Calendar"
                
            Spinner:
                id: year
                text: "2024"
                color: "#FFA500"
                values: ["2024"]
                background_color: (255, 255, 255, 1)
                size_hint: 1, None
                height: "40dp"
                
            # TERM 1
                
            SectionHeader:
                text: "TERM 1"
                bold: True
                    
            MDGridLayout:
                cols: 3
                spacing: "10dp"
                adaptive_height: True
                
                # WEEKS
                
                GrdLineEdit:
                    hint_text: "TERM WEEKS"
                    size_hint: 0.3333, None
                    height: "20dp"
                    disabled: True
    
                GrdLineEdit:
                    id: t1_weeks_no
                    size_hint: 0.3333, None
                    height: "20dp"
                        
                MDLabel:
                    size_hint: 0.3333, None
                    height: "20dp"
                    
                # TERM DATES
                   
                GrdLineEdit:
                    hint_text: "TERM DATES"
                    size_hint: 0.3333, None
                    height: "20dp"
                    disabled: True
                        
                GrdLineEdit:
                    id: t1_opening_date
                    hint_text: "Opening Date"
                    size_hint: 0.3333, None
                    height: "20dp"
                    on_focus: if self.focus: root.open_t1_opening_date_picker()
                        
                GrdLineEdit:
                    id: t1_closing_date
                    hint_text: "Closing Date"
                    size_hint: 0.3333, None
                    height: "20dp"
                    on_focus: if self.focus: root.open_t1_closing_date_picker()
                        
                # HALF TERM DATES
                   
